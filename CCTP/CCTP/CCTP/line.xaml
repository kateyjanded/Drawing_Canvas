<UserControl x:Class="CCTP.line"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCTP"
             mc:Ignorable="d" 
             d:DesignHeight="68" d:DesignWidth="68">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
        <Viewbox Name="view" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Stretch="Fill">
            <Grid Name="grd">
                <Line x:Name="lineUI"  X1="0" X2="68" Y1="0" Y2="68" Stroke="White" Stretch="Fill" StrokeThickness="5"/>
            </Grid>
        </Viewbox>  
    </Grid>
</UserControl>
